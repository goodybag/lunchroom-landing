<!DOCTYPE HTML>
<html>
  <head>
    <link rel="stylesheet" href="/dist/app.css">
    {{{block "css"}}}
  </head>
  <body class="page {{{block "page"}}}">
    <header class="navbar collapsed" component:id="header">
      <div class="container">
        <a href="/">
          <img src="https://d3bqck8kwfkhx5.cloudfront.net/img/logo.png" alt="Goodybag.com" class="navbar-logo">
        </a>
      </div>
    </header>

    {{{block "body"}}}

    <div class="modal fade" id="contact-us-modal">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h3 class="modal-title">Contact Us</h3>
          </div>
          <form action="#" class="form form-vertical contact-us-form">
            <div class="modal-body">
              <div class="form-group">
                <label for="name-input">Name</label>
                <input type="text" name="name">
              </div>
              <div class="form-group">
                <label for="name-input">Email</label>
                <input type="email" name="email">
              </div>
              <div class="form-group">
                <label for="message-input">Message</label>
                <textarea rows="6" type="text" name="message"></textarea>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    
    <footer class="footer" component:id="footer">
      <ul class="nav footer-nav">
        <li><a href="#" data-toggle="modal" data-target="#contact-us-modal">Contact Us</a></li>
        <li><a href="https://www.goodybag.com/legal">Terms of service</a></li>
        <li><a href="https://www.goodybag.com/privacy">Privacy policy</a></li>
      </ul>
    </footer>

    <script src="/dist/app.js"></script>
    {{{block "scripts"}}}
  </body>
</html>